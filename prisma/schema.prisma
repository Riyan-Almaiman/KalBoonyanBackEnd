generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  relationMode = "prisma"
  url = env("DATABASE_URL")
}



//still working on all of these models, not final


model User {
    id    String   @id @default(uuid())
    username String @unique
    email String @unique
    password String
    role Role
    sessions Session[]
}

enum Role {
  SUPPORTER
  ADMIN
  USER
}

model Session{

 id    String   @id @default(uuid())
 type String 
 topic String 
 Leader String?
  users User[]
  date DateTime?
  isAccepted Boolean @default(false)
  description String?

}